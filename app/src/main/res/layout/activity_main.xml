<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/theomen"
    tools:context="com.example.brenda.compound.MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#48D1CC"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:text="Compound words quiz "
        android:textAlignment="center"
        android:textColor="#FF1493"
        android:textStyle="bold" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.76"
        android:id="@+id/image"
        android:src="@drawable/brenda"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="322dp"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:text="Intro to PC quiz"
        android:textAlignment="center"
        android:textColor="#FF1493"
        android:textStyle="bold" />
    <ImageView

        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/gadi" />


</LinearLayout>

</RelativeLayout>

